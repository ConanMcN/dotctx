{
  "name": "dotctx",
  "version": "0.1.0",
  "description": "Universal, file-based, git-tracked AI context system for any model in any tool",
  "type": "module",
  "bin": {
    "dotctx": "dist/bin.js",
    "aictx": "dist/bin.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "context",
    "mcp",
    "claude",
    "cursor",
    "copilot",
    "llm",
    "developer-tools"
  ],
  "author": "Conan McNicholl",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.3.2",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "commander": "^13.1.0",
    "js-yaml": "^4.1.0",
    "picocolors": "^1.1.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.4",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
